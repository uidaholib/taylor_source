---
# generate geojson data for collection items with lat-longs
---
{%- assign fields = site.data.metadata-config -%}
{
    "type": "FeatureCollection",
    "features": [ 
        {% for item in site.data[site.metadata] %}{% if item.latitude and item.longitude %}
        {
            "type":"Feature",
            "geometry":{
                "type":"Point",
                "coordinates":[{{ item.longitude }},{{ item.latitude }}]
            },            
            "properties":{
                {% for f in fields %}"{{ f.field }}": {{ item[f.field] | replace: '""','"' | jsonify }},
                {% endfor %}
                "link": {{ '/items/' | absolute_url | append: item.object-id | append: '.html' | jsonify }}
            }
        }{% unless forloop.last %}, {% endunless %}{% endif %}{% endfor %}
    ]
}